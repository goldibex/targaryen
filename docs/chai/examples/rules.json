{
  "rules": {
    "users": {
      "$user": {
        "innocent": {
          ".validate": "data.parent().child('on-fire').val() === false"
        },
        ".read": "auth !== null",
        ".write":
          "auth !== null && root.child('users').child(auth.uid).child('king').val() === true"
      }
    }
  }
}
